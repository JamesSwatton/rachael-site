    <link
    href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro&display=swap"
    rel="stylesheet">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/atomic.css">
    <title>{% if title %}{{ title }} {% else %}{{ metadata.title }} {% endif %}</title>
</head>
<body class="Bgc(mainColour)">
    <header class="Pstart(20px) Mt(20px) Pos(r) Bgc(mainColour) Pos(st) T(0) BdB">
        <h1 class="Fz(3rem) M(0) Ff(danley)"><a href="{{ '/' | url }}"
                class="C(black):visited">{{ metadata.title }}</a></h1>
        <p class="M(0) Fs(i)">{{ metadata.miniBio }}</p>
        {% include "nav.njk" %}
    </header>

    <main class="Maw(2/3) M(a)">
        <h1>{% if title != "Home" %}{{ title }}{% else %} {% endif %}</h1>
        {{ content | safe }}
    </main>
</body>
</html>
