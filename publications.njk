---
title: Publications
layout: _layouts/base.njk
---
{% for year in collections.years %}
        <h2>{{ year }}</h2>
        <ul>
                {% for paper in collections.publications %}
                        {% if paper.data.year == year %}
                                <li>
                                        <h3><a href="{{ paper.url | url }}">{{ paper.data.title }}</a></h3>
                                        <p class="Fs(i)">{{ paper.data.authors | join(", ") }}</p>
                                </li>
                                {% if paper !== collections.publications | last %}
                                        <hr>
                                {% endif %}
                        {% endif %}
                {% endfor %}
        </ul>
{% endfor %}
